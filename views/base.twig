{#<?php#}
{% import 'grid_classes.html.twig' as grid %}

{% do action( 'maera/wrap/before', post.ID ) %}

<div id="wrap-main-section" class="wrap {{ 'main-section'|apply_filters( 'maera/wrapper/class' ) }}">

	{% do action( 'maera/content/before', post.ID ) %}

	<div class="content" id="content" itemprop="mainContentOfPage">

		<div class="{{ grid.row() }}">

			<div class="content-primary-wrapper {{ 'main'|apply_filters( 'maera/section_class/wrapper' ) }}">

				{% if 1 == theme.theme_mod('enable_breadcrumbs', 1) %}
					{{ function('breadcrumb_trail') }}
				{% endif %}

				{% do action( 'maera/main/before', post.ID ) %}
				{% block main %}{{ __( 'Sorry, no content.', 'maera-restaurant' ) }}{% endblock %}
				{% do action( 'maera/main/after', post.ID ) %}

				{% if 1 == theme.theme_mod('page_layout', 0 ) %}
					{% include 'sidebar.twig' %}
				{% endif %}

			</div>

			<div class="clearfix"></div>

		</div>

	</div><!-- /#content -->

	{% do action( 'maera/content/after' ) %}

</div>

{% do action( 'maera/wrap/after', post.ID ) %}

<div class="clearfix"></div>
